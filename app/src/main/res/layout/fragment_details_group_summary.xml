<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/linearLayout_main_container_without_padding">

    <LinearLayout
        style="@style/linearLayout_expense_income" >

        <Button
            style="@style/button_summary"
            android:id="@+id/b_summary"/>

        <Button
            style="@style/button_history"
            android:id="@+id/b_history" />

    </LinearLayout>


    
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            style="@style/linearLayout_main_container">


            <TextView
                android:text="@string/header_resolution"
                style="@style/sectionHeader" />


            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lv_resolution"/>

            <TextView
                android:text="@string/header_balances"
                style="@style/sectionHeader" />


            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lv_balances"/>



            </LinearLayout>

        </ScrollView>

</LinearLayout>
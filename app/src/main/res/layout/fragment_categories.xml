<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/linearLayout_main_container">

    <LinearLayout
        style="@style/linearLayout_input" >

        <TextView
            style="@style/textView_input_title"
            android:text="Name" />

        <EditText
            style="@style/editText_input"
            android:id="@+id/et_categories_name"
            android:hint="Name"
            android:inputType="text" >
            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        style="@style/linearLayout_input" >

        <TextView
            style="@style/textView_input_title"
            android:text="Color" />

        <Spinner
            style="@style/spinner_input"
            android:id="@+id/sp_color" />
    </LinearLayout>

</LinearLayout>
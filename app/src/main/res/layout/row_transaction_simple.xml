<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/linearLayout_row_simple">
    
    <TextView
        style="@style/icon"
        android:id="@+id/tv_category"/>

    <LinearLayout
        style="@style/linearLayout_row_details">

        <TextView
            style="@style/textView_row_accent"
            android:id="@+id/tv_date"/>

        <TextView
            style="@style/textView_row_normal"
            android:id="@+id/tv_comments"/>

    </LinearLayout>

    <RelativeLayout
        style="@style/relativeLayout_amount">

        <TextView
            style="@style/textView_row_amount"
            android:id="@+id/tv_amount"/>

    </RelativeLayout>

</LinearLayout>

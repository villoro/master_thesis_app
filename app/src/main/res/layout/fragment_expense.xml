<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/fragment_margin"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/row_thickness"
            android:orientation="horizontal" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="@dimen/row_thickness"
                android:text="Expense"
                android:background="@color/red"
                android:layout_weight="1"
                android:id="@+id/b_expense" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="@dimen/row_thickness"
                android:text="Income"
                android:background="@color/green"
                android:layout_weight="1"
                android:id="@+id/b_income" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PAYMENT INFO"
            style="@style/sectionHeader" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/row_thickness"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/row_thickness"
                android:gravity="center_vertical"
                android:text="Amount"
                android:layout_weight="2"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <EditText
                android:id="@+id/et_amount"
                android:layout_width="match_parent"
                android:layout_height="@dimen/row_thickness_with_margin_simple"
                android:ems="10"
                android:hint="Amount"
                android:layout_weight="1"
                android:inputType="numberDecimal" >
                <requestFocus />
            </EditText>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/row_thickness" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_double"
                android:layout_toLeftOf="@+id/iv_edit_categories"
                android:layout_marginRight="@dimen/margin_simple"
                android:text="CATEGORY"
                style="@style/sectionHeader" />

            <ImageView
                android:id="@+id/iv_edit_categories"
                android:layout_width="@dimen/row_icon_size"
                android:layout_height="@dimen/row_icon_size"
                android:layout_margin="@dimen/margin_simple"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_action_edit_black" />

        </RelativeLayout>


        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lv_categories"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_double"
            android:text="ADITIONAL INFO"
            style="@style/sectionHeader" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/row_thickness"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/row_thickness"
                android:gravity="center_vertical"
                android:text="Date"
                android:layout_weight="2"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <Button
                android:id="@+id/b_date"
                android:layout_width="match_parent"
                android:layout_height="@dimen/row_thickness_with_margin_simple"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:ems="10" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/row_thickness"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/row_thickness"
                android:gravity="center_vertical"
                android:text="Comments"
                android:layout_weight="2"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <EditText
                android:id="@+id/et_comments"
                android:layout_width="match_parent"
                android:layout_height="@dimen/row_thickness_with_margin_simple"
                android:gravity="center_vertical"
                android:ems="10"
                android:layout_weight="1"
                android:hint="Comments (Optional)" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>